<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WimmExpenseTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/light_gray</item>
        <item name="android:navigationBarColor">@color/light_gray</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ApplicationBaseSettings">
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="CustomEditText">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="ToolTipText">
        <item name="android:textColor">@color/med_gray</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>
</resources>